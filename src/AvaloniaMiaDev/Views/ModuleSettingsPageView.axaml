<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="AvaloniaMiaDev.Views.ModuleSettingsPageView"
    x:DataType="splitViewPane:ModuleSettingsViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="clr-namespace:AvaloniaMiaDev.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:splitViewPane="clr-namespace:AvaloniaMiaDev.ViewModels.SplitViewPane"
    xmlns:twoRangeSlider="https://github.com/DmitryNizhebovsky/Avalonia.RangeSlider"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Styles>
        <StyleInclude Source="avares://Avalonia.Xaml.Interactions.Draggable/Styles.axaml" />
    </UserControl.Styles>

    <ScrollViewer>
        <StackPanel Classes="Page">
            <TextBlock Classes="Header" Text="VRChat Module Settings" />

            <Expander
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                IsExpanded="False"
                VerticalAlignment="Stretch">
                <Expander.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <PathIcon
                            Data="{StaticResource EyeTrackingRegular}"
                            Grid.Column="0"
                            Margin="10,10,20,10"
                            VerticalAlignment="Center"
                            Width="32" />
                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            Margin="0,10,0,10">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Margin="5"
                                Text="Emulate Eye Widen" />
                            <TextBlock
                                FontSize="14"
                                Foreground="{DynamicResource SystemChromeGrayColor}"
                                Margin="5"
                                Text="Description" />
                        </StackPanel>
                        <ToggleSwitch Grid.Column="3" IsChecked="{Binding EmulateEyeWiden, Mode=TwoWay}" />
                    </Grid>
                </Expander.Header>
                <Grid IsEnabled="{Binding EmulateEyeWiden}">
                    <StackPanel>
                        <DockPanel>
                            <TextBlock Margin="0,0,10,0" VerticalAlignment="Center">
                                <Run FontWeight="DemiBold" Text="Eye Widen Threshold: " />
                                <Run Text="{Binding #LeftHsfSlider.LowerSelectedValue, StringFormat={}{0:0.00}}" />
                                <Run Text="-" />
                                <Run Text="{Binding #LeftHsfSlider.UpperSelectedValue, StringFormat={}{0:0.00}}" />
                            </TextBlock>
                            <twoRangeSlider:RangeSlider
                                LowerSelectedValue="{Binding EyeWidenLower, Mode=TwoWay}"
                                Margin="10,0"
                                Maximum="1"
                                Minimum="0"
                                TickFrequency="0.01"
                                UpperSelectedValue="{Binding EyeWidenUpper, Mode=TwoWay}"
                                x:Name="LeftHsfSlider" />
                        </DockPanel>
                    </StackPanel>
                </Grid>
            </Expander>

            <Expander
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                IsExpanded="False"
                VerticalAlignment="Stretch">
                <Expander.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <PathIcon
                            Data="{StaticResource EyeTrackingRegular}"
                            Grid.Column="0"
                            Margin="10,10,20,10"
                            VerticalAlignment="Center"
                            Width="32" />
                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            Margin="0,10,0,10">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Margin="5"
                                Text="Emulate Eye Squint" />
                            <TextBlock
                                FontSize="14"
                                Foreground="{DynamicResource SystemChromeGrayColor}"
                                Margin="5"
                                Text="Description" />
                        </StackPanel>
                        <ToggleSwitch Grid.Column="3" IsChecked="{Binding EmulateEyeSquint, Mode=TwoWay}" />
                    </Grid>
                </Expander.Header>
                <Grid IsEnabled="{Binding EmulateEyeSquint}">
                    <StackPanel>
                        <DockPanel>
                            <TextBlock Margin="0,0,10,0" VerticalAlignment="Center">
                                <Run FontWeight="DemiBold" Text="Eye Squint Threshold:" />
                                <Run Text="{Binding #RightHsfSlider.LowerSelectedValue, StringFormat={}{0:0.00}}" />
                                <Run Text="-" />
                                <Run Text="{Binding #RightHsfSlider.UpperSelectedValue, StringFormat={}{0:0.00}}" />
                            </TextBlock>
                            <twoRangeSlider:RangeSlider
                                LowerSelectedValue="{Binding EyeSquintLower, Mode=TwoWay}"
                                Margin="10,0"
                                Maximum="1"
                                Minimum="0"
                                TickFrequency="0.01"
                                UpperSelectedValue="{Binding EyeSquintUpper, Mode=TwoWay}"
                                x:Name="RightHsfSlider" />
                        </DockPanel>
                    </StackPanel>
                </Grid>
            </Expander>

            <Expander
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                IsExpanded="False"
                VerticalAlignment="Stretch">
                <Expander.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <PathIcon
                            Data="{StaticResource EyeTrackingRegular}"
                            Grid.Column="0"
                            Margin="10,10,20,10"
                            VerticalAlignment="Center"
                            Width="32" />
                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            Margin="0,10,0,10">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Margin="5"
                                Text="Emulate Eyebrows" />
                            <TextBlock
                                FontSize="14"
                                Foreground="{DynamicResource SystemChromeGrayColor}"
                                Margin="5"
                                Text="Description" />
                        </StackPanel>
                        <ToggleSwitch Grid.Column="3" IsChecked="{Binding EmulateEyebrows, Mode=TwoWay}" />
                    </Grid>
                </Expander.Header>
                <Grid IsEnabled="{Binding EmulateEyebrows}">
                    <StackPanel>
                        <DockPanel>
                            <TextBlock Margin="0,0,10,0" VerticalAlignment="Center">
                                <Run FontWeight="DemiBold" Text="Lower" />
                                <Run Text="{Binding #BottomHsfSlider.LowerSelectedValue, StringFormat={}{0:0.00}}" />
                                <Run FontWeight="DemiBold" Text="- Raiser" />
                                <Run Text="{Binding #BottomHsfSlider.UpperSelectedValue, StringFormat={}{0:0.00}}" />
                            </TextBlock>
                            <twoRangeSlider:RangeSlider
                                LowerSelectedValue="{Binding EyeBrowsLower, Mode=TwoWay}"
                                Margin="10,0"
                                Maximum="1"
                                Minimum="0"
                                TickFrequency="0.01"
                                UpperSelectedValue="{Binding EyeBrowsUpper, Mode=TwoWay}"
                                x:Name="BottomHsfSlider" />
                        </DockPanel>
                    </StackPanel>
                </Grid>
            </Expander>

        </StackPanel>
    </ScrollViewer>
</UserControl>

