<UserControl
    x:Class="Baballonia.Views.HomePageView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:splitViewPane="clr-namespace:Baballonia.ViewModels.SplitViewPane"
    xmlns:views="clr-namespace:Baballonia.Views"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="splitViewPane:HomePageViewModel"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="16" Classes="Page">
            <Grid Margin="0,0,0,12" ColumnDefinitions="*,Auto">
                <TextBlock
                    Grid.Column="0"
                    Classes="Header"
                    FontSize="28"
                    Text="Home" />
                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="12">
                    <Button
                        Padding="12,8"
                        Click="OnQuickVRCalibrationRequested"
                        CornerRadius="4"
                        IsEnabled="{Binding ShouldShowEyeCalibration}"
                        IsVisible="{Binding ShouldShowEyeCalibration}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <PathIcon Data="{StaticResource HeadsetVrRegular}" />
                            <TextBlock VerticalAlignment="Center" Text="5-Point Quick Calibration" />
                        </StackPanel>
                    </Button>
                    <Button
                        Padding="12,8"
                        Click="OnFullVRCalibrationRequested"
                        CornerRadius="4"
                        IsEnabled="{Binding ShouldShowEyeCalibration}"
                        IsVisible="{Binding ShouldShowEyeCalibration}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <PathIcon Data="{StaticResource HeadsetVrRegular}" />
                            <TextBlock VerticalAlignment="Center" Text="Full Calibration" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <UniformGrid
                x:Name="UniformGridPanel"
                ColumnSpacing="12"
                Columns="1"
                RowSpacing="12"
                Rows="3">
                <!--  Left Panel  -->
                <Grid RowDefinitions="Auto,Auto,Auto,Auto">
                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,12,12"
                        FontSize="20"
                        FontWeight="Medium"
                        Text="Left Eye Camera" />

                    <!--  Camera address section  -->
                    <Border
                        Grid.Row="1"
                        Margin="0,0,0,16"
                        Padding="16,16,16,16"
                        Background="{DynamicResource SystemChromeMediumLowColor}"
                        CornerRadius="8">
                        <StackPanel>
                            <TextBlock FontSize="14" Text="Left Camera Address" />

                            <Grid RowDefinitions="Auto,Auto,Auto">
                                <AutoCompleteBox
                                    x:Name="LeftCameraAddressEntry"
                                    Grid.Row="0"
                                    Height="36"
                                    Margin="0,6"
                                    FilterMode="Contains"
                                    FontSize="13"
                                    Text="{Binding LeftCameraDisplayedAddress}"
                                    TextChanged="CameraAddressEntry_TextChanged"
                                    Watermark="Start typing..." />

                                <TextBlock
                                    x:Name="LeftAddressHint"
                                    Grid.Row="1"
                                    Margin="0,0,0,4"
                                    FontSize="12"
                                    FontStyle="Italic"
                                    Foreground="Orange"
                                    IsVisible="False"
                                    TextWrapping="Wrap" />

                                <Grid
                                    Grid.Row="2"
                                    Margin="0,4,0,8"
                                    ColumnDefinitions="*,*">

                                    <Button
                                        Grid.Column="0"
                                        Margin="0,0,4,0"
                                        Padding="12,8"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        Click="LeftCameraStart"
                                        Content="Start Camera"
                                        FontSize="13" />

                                    <Button
                                        Grid.Column="1"
                                        Margin="4,0,0,0"
                                        Padding="12,8"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        Click="LeftCameraStop"
                                        Content="Stop Camera"
                                        FontSize="13" />
                                </Grid>
                            </Grid>

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <RadioButton
                                    x:Name="LeftTrackingModeButton"
                                    Click="LeftOnTrackingModeClicked"
                                    Content="Tracking"
                                    GroupName="LeftImageControlGroup"
                                    IsChecked="True" />
                                <RadioButton
                                    x:Name="LeftCroppingModeButton"
                                    Click="LeftOnCroppingModeClicked"
                                    Content="Cropping"
                                    GroupName="LeftImageControlGroup" />
                            </StackPanel>

                            <Button
                                x:Name="LeftSelectEntireFrame"
                                Margin="0,8,0,0"
                                Padding="0,8"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Click="LeftSelectEntireFrameClicked"
                                Content="Select Entire Frame"
                                FontSize="13" />
                        </StackPanel>
                    </Border>

                    <!--  Camera view section  -->
                    <Viewbox x:Name="LeftViewBox" Grid.Row="2">
                        <Grid>
                            <Image
                                x:Name="LeftMouthWindow"
                                HorizontalAlignment="Center"
                                IsHitTestVisible="True"
                                Source="{Binding LeftEyeBitmap}" />
                            <Canvas
                                x:Name="LeftCanvasWindow"
                                Background="Transparent"
                                IsHitTestVisible="False">
                                <Rectangle
                                    x:Name="LeftRectangleWindow"
                                    Fill="Transparent"
                                    IsHitTestVisible="False"
                                    Stroke="{DynamicResource Accent}"
                                    StrokeThickness="24" />
                            </Canvas>
                        </Grid>
                    </Viewbox>

                    <!--  Camera settings section in Expander  -->
                    <Expander
                        Grid.Row="3"
                        HorizontalAlignment="Stretch"
                        Header="Left Camera Settings"
                        IsExpanded="False"
                        IsVisible="{Binding IsLeftTrackingMode, RelativeSource={RelativeSource AncestorType=views:HomePageView}}">
                        <Border Background="{DynamicResource SystemChromeMediumLowColor}" CornerRadius="8">
                            <StackPanel>

                                <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
                                    <StackPanel Grid.Row="0" Grid.Column="0">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Text="Vertical Flip" />
                                        <TextBlock FontSize="12" Text="Flip the image vertically" />
                                    </StackPanel>
                                    <CheckBox
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        IsChecked="{Binding FlipLeftEyeYAxis, Mode=TwoWay}" />

                                    <StackPanel
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Margin="0,12">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Text="Horizontal Flip" />
                                        <TextBlock FontSize="12" Text="Flip the image horizontally" />
                                    </StackPanel>
                                    <CheckBox
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        IsChecked="{Binding FlipLeftEyeXAxis, Mode=TwoWay}" />

                                    <StackPanel Grid.Row="2" Grid.Column="0">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Text="Image Rotation" />
                                        <TextBlock FontSize="12" Text="Rotates the image in a circle" />
                                    </StackPanel>
                                    <Slider
                                        x:Name="LeftRotationSlider"
                                        Grid.Row="3"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        Maximum="6.28"
                                        Minimum="0"
                                        Value="{Binding LeftEyeRotation}" />
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Expander>
                </Grid>

                <!--  Right Panel  -->
                <Grid RowDefinitions="Auto,Auto,Auto,Auto">
                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,12,12"
                        FontSize="20"
                        FontWeight="Medium"
                        Text="Right Eye Camera" />

                    <!--  Camera address section  -->
                    <Border
                        Grid.Row="1"
                        Margin="0,0,0,16"
                        Padding="16,16,16,16"
                        Background="{DynamicResource SystemChromeMediumLowColor}"
                        CornerRadius="8">
                        <StackPanel>
                            <TextBlock FontSize="14" Text="Right Camera Address" />

                            <Grid RowDefinitions="Auto,Auto,Auto">
                                <AutoCompleteBox
                                    x:Name="RightCameraAddressEntry"
                                    Grid.Row="0"
                                    Height="36"
                                    Margin="0,6"
                                    FilterMode="Contains"
                                    FontSize="13"
                                    Text="{Binding RightCameraDisplayedAddress}"
                                    TextChanged="CameraAddressEntry_TextChanged"
                                    Watermark="Start typing..." />

                                <TextBlock
                                    x:Name="RightAddressHint"
                                    Grid.Row="1"
                                    Margin="0,0,0,4"
                                    FontSize="12"
                                    FontStyle="Italic"
                                    Foreground="Orange"
                                    IsVisible="False"
                                    TextWrapping="Wrap" />

                                <Grid
                                    Grid.Row="2"
                                    Margin="0,4,0,8"
                                    ColumnDefinitions="*,*">

                                    <Button
                                        Grid.Column="0"
                                        Margin="0,0,4,0"
                                        Padding="12,8"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        Click="RightCameraStart"
                                        Content="Start Camera"
                                        FontSize="13" />

                                    <Button
                                        Grid.Column="1"
                                        Margin="4,0,0,0"
                                        Padding="12,8"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        Click="RightCameraStop"
                                        Content="Stop Camera"
                                        FontSize="13" />
                                </Grid>
                            </Grid>

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <RadioButton
                                    x:Name="RightTrackingModeButton"
                                    Click="RightOnTrackingModeClicked"
                                    Content="Tracking"
                                    GroupName="RightImageControlGroup"
                                    IsChecked="True" />
                                <RadioButton
                                    x:Name="RightCroppingModeButton"
                                    Click="RightOnCroppingModeClicked"
                                    Content="Cropping"
                                    GroupName="RightImageControlGroup" />
                            </StackPanel>

                            <Button
                                x:Name="RightSelectEntireFrame"
                                Margin="0,8,0,0"
                                Padding="0,8"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Click="RightSelectEntireFrameClicked"
                                Content="Select Entire Frame"
                                FontSize="13" />
                        </StackPanel>
                    </Border>

                    <!--  Camera view section  -->
                    <Viewbox x:Name="RightViewBox" Grid.Row="2">
                        <Grid>
                            <Image
                                x:Name="RightMouthWindow"
                                HorizontalAlignment="Center"
                                IsHitTestVisible="True"
                                Source="{Binding RightEyeBitmap}" />
                            <Canvas
                                x:Name="RightCanvasWindow"
                                Background="Transparent"
                                IsHitTestVisible="False">
                                <Rectangle
                                    x:Name="RightRectangleWindow"
                                    Fill="Transparent"
                                    IsHitTestVisible="False"
                                    Stroke="{DynamicResource Accent}"
                                    StrokeThickness="24" />
                            </Canvas>
                        </Grid>
                    </Viewbox>

                    <!--  Camera settings section in Expander  -->
                    <Expander
                        Grid.Row="3"
                        HorizontalAlignment="Stretch"
                        Header="Right Camera Settings"
                        IsExpanded="False"
                        IsVisible="{Binding IsRightTrackingMode, RelativeSource={RelativeSource AncestorType=views:HomePageView}}">
                        <Border Background="{DynamicResource SystemChromeMediumLowColor}" CornerRadius="8">
                            <StackPanel>

                                <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
                                    <StackPanel Grid.Row="0" Grid.Column="0">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Text="Vertical Flip" />
                                        <TextBlock FontSize="12" Text="Flip the image vertically" />
                                    </StackPanel>
                                    <CheckBox
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        IsChecked="{Binding FlipRightEyeYAxis, Mode=TwoWay}" />

                                    <StackPanel
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Margin="0,12">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Text="Horizontal Flip" />
                                        <TextBlock FontSize="12" Text="Flip the image horizontally" />
                                    </StackPanel>
                                    <CheckBox
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        IsChecked="{Binding FlipRightEyeXAxis, Mode=TwoWay}" />

                                    <StackPanel Grid.Row="2" Grid.Column="0">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Text="Image Rotation" />
                                        <TextBlock FontSize="12" Text="Rotates the image in a circle" />
                                    </StackPanel>
                                    <Slider
                                        x:Name="RightRotationSlider"
                                        Grid.Row="3"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        Maximum="6.28"
                                        Minimum="0"
                                        Value="{Binding RightEyeRotation}" />
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Expander>
                </Grid>

                <!--  Face Panel  -->
                <Grid RowDefinitions="Auto,Auto,Auto,Auto">
                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,12,12"
                        FontSize="20"
                        FontWeight="Medium"
                        Text="Face Camera" />

                    <!--  Camera address section  -->
                    <Border
                        Grid.Row="1"
                        Margin="0,0,0,16"
                        Padding="16,16,16,16"
                        Background="{DynamicResource SystemChromeMediumLowColor}"
                        CornerRadius="8">
                        <StackPanel>
                            <TextBlock FontSize="14" Text="Face Camera Address" />

                            <Grid RowDefinitions="Auto,Auto,Auto">
                                <AutoCompleteBox
                                    x:Name="FaceCameraAddressEntry"
                                    Grid.Row="0"
                                    Height="36"
                                    Margin="0,6"
                                    FilterMode="Contains"
                                    FontSize="13"
                                    Text="{Binding FaceCameraDisplayedAddress}"
                                    TextChanged="CameraAddressEntry_TextChanged"
                                    Watermark="Start typing..." />

                                <TextBlock
                                    x:Name="FaceAddressHint"
                                    Grid.Row="1"
                                    Margin="0,0,0,4"
                                    FontSize="12"
                                    FontStyle="Italic"
                                    Foreground="Orange"
                                    IsVisible="False"
                                    TextWrapping="Wrap" />

                                <Grid
                                    Grid.Row="2"
                                    Margin="0,4,0,8"
                                    ColumnDefinitions="*,*">

                                    <Button
                                        Grid.Column="0"
                                        Margin="0,0,4,0"
                                        Padding="12,8"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        Click="FaceCameraStart"
                                        Content="Start Camera"
                                        FontSize="13" />

                                    <Button
                                        Grid.Column="1"
                                        Margin="4,0,0,0"
                                        Padding="12,8"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Center"
                                        Click="FaceCameraStop"
                                        Content="Stop Camera"
                                        FontSize="13" />
                                </Grid>
                            </Grid>

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <RadioButton
                                    x:Name="FaceTrackingModeButton"
                                    Click="FaceOnTrackingModeClicked"
                                    Content="Tracking"
                                    GroupName="FaceImageControlGroup"
                                    IsChecked="True" />
                                <RadioButton
                                    x:Name="FaceCroppingModeButton"
                                    Click="FaceOnCroppingModeClicked"
                                    Content="Cropping"
                                    GroupName="FaceImageControlGroup" />
                            </StackPanel>

                            <Button
                                x:Name="FaceSelectEntireFrame"
                                Margin="0,8,0,0"
                                Padding="0,8"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                Click="FaceSelectEntireFrameClicked"
                                Content="Select Entire Frame"
                                FontSize="13" />
                        </StackPanel>
                    </Border>

                    <!--  Camera view section  -->
                    <Viewbox x:Name="FaceViewBox" Grid.Row="2">
                        <Grid>
                            <Image
                                x:Name="FaceMouthWindow"
                                HorizontalAlignment="Center"
                                IsHitTestVisible="True"
                                Source="{Binding FaceBitmap}" />
                            <Canvas
                                x:Name="FaceCanvasWindow"
                                Background="Transparent"
                                IsHitTestVisible="False">
                                <Rectangle
                                    x:Name="FaceRectangleWindow"
                                    Fill="Transparent"
                                    IsHitTestVisible="False"
                                    Stroke="{DynamicResource Accent}"
                                    StrokeThickness="24" />
                            </Canvas>
                        </Grid>
                    </Viewbox>

                    <!--  Camera settings section in Expander  -->
                    <Expander
                        Grid.Row="3"
                        HorizontalAlignment="Stretch"
                        Header="Face Camera Settings"
                        IsExpanded="False"
                        IsVisible="{Binding IsFaceTrackingMode, RelativeSource={RelativeSource AncestorType=views:HomePageView}}">
                        <Border Background="{DynamicResource SystemChromeMediumLowColor}" CornerRadius="8">
                            <StackPanel>

                                <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
                                    <StackPanel Grid.Row="0" Grid.Column="0">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Text="Vertical Flip" />
                                        <TextBlock FontSize="12" Text="Flip the image vertically" />
                                    </StackPanel>
                                    <CheckBox
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        IsChecked="{Binding FlipFaceYAxis, Mode=TwoWay}" />

                                    <StackPanel
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Margin="0,12">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Text="Horizontal Flip" />
                                        <TextBlock FontSize="12" Text="Flip the image horizontally" />
                                    </StackPanel>
                                    <CheckBox
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        IsChecked="{Binding FlipFaceXAxis, Mode=TwoWay}" />

                                    <StackPanel Grid.Row="2" Grid.Column="0">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Text="Image Rotation" />
                                        <TextBlock FontSize="12" Text="Rotates the image in a circle" />
                                    </StackPanel>
                                    <Slider
                                        x:Name="FaceRotationSlider"
                                        Grid.Row="3"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        Maximum="6.28"
                                        Minimum="0"
                                        Value="{Binding FaceRotation}" />
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Expander>
                </Grid>
            </UniformGrid>

        </StackPanel>
    </ScrollViewer>

</UserControl>
