<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:Baballonia.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Baballonia.Controls.DropOverlay">

  <Border
    x:Name ="ViewContainer"
    CornerRadius="16 0 0 0"
    IsVisible="{Binding IsOverlayVisible, RelativeSource={RelativeSource AncestorType=controls:DropOverlay}}"
    Background="#80000000"
    ZIndex="1000">
    <Grid>
      <Border
        Background="{DynamicResource SystemChromeMediumLowColor}"
        BorderBrush="{DynamicResource SystemBaseMediumLowColor}"
        BorderThickness="2"
        CornerRadius="8"
        Height="200"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Padding="16"
        Width="400">

        <StackPanel
          HorizontalAlignment="Center"
          Spacing="20"
          VerticalAlignment="Center">

          <TextBlock
            FontSize="22"
            FontWeight="Bold"
            TextWrapping="Wrap"
            Text="Important!" />

          <TextBlock TextWrapping="Wrap">
            Newer babble trackers have a 20 second delay after being plugged in before they can be used.
            It will make a USB plugging-in sound when it is ready!</TextBlock>

          <Grid>
            <CheckBox x:Name="WarningCheckbox" IsCheckedChanged="Changed">Don't show this warning again</CheckBox>
            <Button
              Click="SecondWarningUnderstood"
              Content="Dismiss"
              CornerRadius="4"
              HorizontalAlignment="Right"
              Padding="16,8" />
          </Grid>
        </StackPanel>
      </Border>
    </Grid>
  </Border>
</UserControl>
